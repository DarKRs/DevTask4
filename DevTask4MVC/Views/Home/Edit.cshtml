@model DataBase.Entityes.Furniture
 
<h2>Редактирование мебели</h2>
<form asp-action="edit" asp-controller="home" asp-route-id="@Model.Id">
    <p>
        <label asp-for="Name">Имя</label><br />
        <input type="text" asp-for="Name" />
    </p>
    <p>
        <label asp-for="Type">Тип</label><br />
        <input type="text" asp-for="Type" />
    </p>
    <p>
        <label asp-for="Size">Размер</label><br />
        <input type="text" asp-for="Size" />
    </p>
    <p>
        <label asp-for="Cost">Цена</label><br />
        <input type="number" asp-for="Cost" />
    </p>
    <p>
        <input type="submit" value="Сохранить" />
    </p>
</form>